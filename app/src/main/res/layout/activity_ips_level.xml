<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/quiz_ipa_bg"
    tools:context=".IpsLevelActivity">

    <!-- Judul Game -->
    <TextView
        android:id="@+id/tvTitleIps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Pelajaran IPS"
        android:textColor="#4E342E"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subjudul -->
    <TextView
        android:id="@+id/tvSubtitleIps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Pilih Level Anda"
        android:textColor="#6D4C41"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleIps" />

    <!-- Tombol Level Dasar -->
    <Button
        android:id="@+id/btn_easy"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Mudah"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitleIps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Level Menengah -->
    <Button
        android:id="@+id/btn_normal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Normal"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_easy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Level Lanjutan -->
    <Button
        android:id="@+id/btn_hard"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Sulit"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
