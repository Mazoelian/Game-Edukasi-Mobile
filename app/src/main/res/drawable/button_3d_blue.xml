<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lapisan bawah -->
    <item>
        <shape>
            <solid android:color="#42A5F5" /> <!-- Biru muda -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Lapisan atas dengan gradasi -->
    <item android:top="6dp" android:left="6dp">
        <shape>
            <gradient
                android:startColor="#1565C0"
            android:endColor="#42A5F5"
            android:angle="45" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
